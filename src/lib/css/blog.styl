/* menu button */


label.bt-menu {
	position: absolute;
	right: 10px;
	top: 0px;
	width: 44px;
	height: 44px;
	display: block;
	cursor:pointer;
	box-sizing: content-box;
}
label.bt-menu::after {
	clear:both;
}
.bt-menu span {
	position: absolute;
	background-color: #666;
	clear: both;
	display: block;
	height: 3px;
	margin: 0 auto 3px;
	left: 0px;
	overflow: hidden;
	text-indent: -9999px;
	width: 20px;
	/* reverse transform */
	transition: bottom .2s ease .1s, opacity .001s linear .3s, transform .2s ease .3s;
	transition: transform .2s ease .1s, opacity .001s linear .3s, bottom .2s ease .3s;
}

#ck-show-menu { display: none; }

#ck-show-menu:checked ~ .bt-menu span {
	transition: bottom .2s ease .1s, opacity .001s linear .3s, transform .2s ease .3s;
}

.bt-menu .bt-top {
	bottom: 7px;
}
.bt-menu .bt-middle {
	bottom: 13px;
}
.bt-menu .bt-bottom {
	bottom: 19px;
}

/** hamburger crossed icon **/

#ck-show-menu:checked ~ .bt-menu .bt-top {
	transform: rotate(45deg);
	bottom: 13px; /* 7px + 6 */
}
#ck-show-menu:checked ~ .bt-menu .bt-middle {
	opacity: 0;
}
#ck-show-menu:checked ~ .bt-menu .bt-bottom {
	transform: rotate(-45deg);
	bottom: 13px; /* 19 - 6 */
}


